{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "main-capability",
    "description": "Capability for the all windows window",
    "windows": ["*"],
    "permissions": [
        "path:default",
        "event:default",
        "window:default",
        "shell:allow-open",
        "app:default",
        "resources:default",
        "menu:default",
        "tray:default",
        "sql:allow-select",
        "sql:allow-load",
        "sql:allow-close",
        "sql:allow-execute",
        "window:allow-set-title",
        "window:allow-start-dragging",
        "process:allow-restart",
        "process:allow-exit",
        "log:default",
        "window:allow-create",
        "webview:allow-create-webview-window",
        "webview:allow-set-webview-focus",
        "webview:allow-set-webview-size",
        "webview:allow-set-webview-position",
        "window:allow-title",
        "window:allow-theme",
        "window:allow-show",
        "window:allow-hide",
        "window:allow-set-effects",
        "window:allow-set-focus",
        "window:allow-set-title",
        {
            "identifier": "http:allow-fetch",
            "allow": ["https://www.royalroad.com/*"]
        },
        {
            "identifier": "http:allow-fetch-send",
            "allow": ["https://www.royalroad.com/*"]
        },
        {
            "identifier": "http:allow-fetch-read-body",
            "allow": ["https://www.royalroad.com/*"]
        }
    ],
    "remote": {
        "urls": ["https://www.royalroad.com*"]
    }
}
