{
    "productName": "web-book-reader",
    "version": "0.0.0",
    "identifier": "com.tauri.dev",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "macOSPrivateApi": true,
        "windows": [
            {
                "title": "web-book-reader",
                "width": 960,
                "height": 600,
                "minWidth": 320,
                "minHeight": 480,
                "titleBarStyle": "Overlay",
                "windowEffects": {
                    "effects": ["hudWindow"]
                },
                "theme": "Light",
                "acceptFirstMouse": true,
                "hiddenTitle": true,
                "decorations": true,
                "url": "/books",
                "transparent": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "plugins": {
        "sql": {
            "preload": ["sqlite:application.db"]
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
